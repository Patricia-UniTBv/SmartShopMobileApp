<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartShopMobileApp.Views.SignUpView"
             Title="SignUpView">
    <VerticalStackLayout>
            <ScrollView>
                <StackLayout Margin="20">
                    <Entry Placeholder="First Name" x:Name="firstNameEntry"/>
                    <Entry Placeholder="Last Name" x:Name="lastNameEntry"/>
                    <Entry Placeholder="Email Address" x:Name="emailEntry"/>
                    <Entry Placeholder="Password" IsPassword="True" x:Name="passwordEntry"/>
                    <DatePicker x:Name="birthDateDatePicker"/>
                    <Button Text="Sign Up" Command="{Binding SignUpCommand}"/>
                </StackLayout>
            </ScrollView>
    </VerticalStackLayout>
</ContentPage>