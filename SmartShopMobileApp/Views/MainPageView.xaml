<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartShopMobileApp.Views.MainPageView"
             Title="MainPageView">
    <VerticalStackLayout>
        <Button Grid.Column="0" Grid.Row="1"
         Text="Log In"    
         Command="{Binding LogInCommand}"
         TextColor="#3a424f"
         CornerRadius="8"
         FontSize="18"
         HorizontalOptions="FillAndExpand"
         Margin="10,0,10,60"
         Padding="15,10,15,10"
         BorderColor="#3a424f"
         BorderWidth="2"/>

        <Button Grid.Column="1" Grid.Row="1"
         Text="Sign Up" 
         Command="{Binding SignUpCommand}"
         TextColor="#3a424f"
         CornerRadius="8"
         FontSize="18"
         HorizontalOptions="FillAndExpand"
         Margin="10,0,10,60"
         Padding="15,10,15,10"
         BorderColor="#3a424f"
         BorderWidth="2"/>
    </VerticalStackLayout>
</ContentPage>