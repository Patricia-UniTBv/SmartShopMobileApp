<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartShopMobileApp.Views.MonthlySpendingsView"
             xmlns:micro="clr-namespace:Microcharts.Maui;assembly=Microcharts.Maui"
             Title="View your spendings">
    <ScrollView>
        <VerticalStackLayout>
            <Label Text="Your spendings in the last 4 months:"  Padding="10,20,10,20" TextColor="#2B0B98" FontSize="16"></Label>
            <micro:ChartView x:Name="chartView" HeightRequest="300" WidthRequest="500"/>
            <micro:ChartView x:Name="chartView1" HeightRequest="300" WidthRequest="300" Margin="50,20,0,0"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>