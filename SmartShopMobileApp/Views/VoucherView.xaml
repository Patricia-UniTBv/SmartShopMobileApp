<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartShopMobileApp.Views.VoucherView"
             Title="VoucherView">
    <VerticalStackLayout>
        <Image Source="card.png" HeightRequest="300" WidthRequest="300" />
        <Label Text="125 lei" 
               Margin="170, -20, 0, 0"
               FontFamily="Poppins-Regular"
               FontSize="20"
               TextColor="#8C1A6D"/>
        <Button Text="Apply" Command="{Binding ApplyVoucherCommand}" FontSize="20" Margin="90,250,90,0" CornerRadius="20" BackgroundColor="Pink"/>

    </VerticalStackLayout>
</ContentPage>